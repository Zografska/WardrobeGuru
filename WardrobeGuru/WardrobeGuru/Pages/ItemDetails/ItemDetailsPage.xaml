<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WardrobeGuru.Pages.ItemDetails.ItemDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding ClothingItem.Image.ImagePath}" />
            <Label Text="{Binding ClothingItem.Name}"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="26"
                   CharacterSpacing="1" />
            <Label Text="{Binding ClothingItem.Status}"
                   HorizontalOptions="Center"
                   FontSize="20" />
            <Label Text="{Binding ClothingItem.Description}"
                   HorizontalOptions="Center"
                   FontSize="20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>